{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "experimentalDecorators": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./src/",
    "paths": {},
    "plugins": [{
      "transform": "transformer-module"
    }, ]
  },
  "exclude": ["dist", "build", "node_modules", "internals"]
}
